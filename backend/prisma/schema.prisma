// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  fullName String
  email    String    @unique
  password String
  telefone String    @unique
  createAt DateTime  @default(now())
  contact  Contact[]

  @@map("users")
}

model Contact {
  id       String   @id
  fullName String
  email    String   @unique
  telefone String   @unique
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  createAt DateTime @default(now())

  @@map("contacts")
}
